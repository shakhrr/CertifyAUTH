<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PalmSDKAppTheme.NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/palm_sdk_colorPrimary</item>
        <item name="colorPrimaryDark">@color/palm_sdk_colorPrimaryDark</item>
        <item name="colorAccent">@color/palm_sdk_colorAccent</item>
    </style>

    <style name="PalmSDKAppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/palm_sdk_colorPrimary</item>
        <item name="colorPrimaryDark">@color/palm_sdk_colorPrimaryDark</item>
        <item name="colorAccent">@color/palm_sdk_colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="PalmSDKAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/palm_sdk_colorPrimary</item>
        <item name="colorPrimaryDark">@color/palm_sdk_colorPrimaryDark</item>
        <item name="colorAccent">@color/palm_sdk_colorAccent</item>
    </style>

    <style name="PinButtonStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">@dimen/pin_button_width</item>
        <item name="android:layout_height">@dimen/pin_button_height</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="PinRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/pin_ratingbar</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
        <item name="android:minWidth">32dip</item>
    </style>

    <style name="ErrorRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/error_rating_bar</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
        <item name="android:minWidth">32dip</item>
    </style>
</resources>