<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".SecurityCheckupActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/tab_single" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <TableRow
            android:id="@+id/tr_os"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="myOnClick"
            android:paddingLeft="@dimen/margin10"
            android:paddingTop="@dimen/margin10">

            <ImageView
                android:id="@+id/image_current_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/os_suss" />

            <TextView
                android:id="@+id/tv_current_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_weight="1"
                android:text="@string/current_version"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size4"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_os"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_action_down" />

        </TableRow>

        <LinearLayout
            android:id="@+id/ll_os"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin30"
            android:layout_marginTop="@dimen/margin02"
            android:layout_marginRight="@dimen/margin16"
            android:onClick="myOnClick"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_version"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin05"
                android:text="@string/current_version"
                android:textColor="@color/black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/gray_light" />

        <TableRow
            android:id="@+id/tr_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="myOnClick"
            android:paddingLeft="@dimen/margin10"
            android:paddingTop="@dimen/margin10">

            <ImageView
                android:id="@+id/image_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/os_suss" />

            <TextView
                android:id="@+id/tv_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_weight="1"
                android:text="@string/certify_updated"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size4"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_app"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_action_down" />
        </TableRow>

        <LinearLayout
            android:id="@+id/ll_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin30"
            android:layout_marginTop="@dimen/margin02"
            android:layout_marginRight="@dimen/margin16"
            android:onClick="myOnClick"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_one_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_version"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_two_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin05"
                android:text="@string/current_version"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_three_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin05"
                    android:text="@string/current_version"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin05"
                    android:text="@string/app_link"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/gray_light" />

        <TableRow
            android:id="@+id/tr_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="myOnClick"
            android:paddingLeft="@dimen/margin10"
            android:paddingTop="@dimen/margin10">

            <ImageView
                android:id="@+id/image_screen_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/os_suss" />

            <TextView
                android:id="@+id/tv_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_weight="1"
                android:text="@string/screen_lock"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size4"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_screen"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_action_down" />
        </TableRow>


        <TextView
            android:id="@+id/tv_lock_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin30"
            android:layout_marginTop="@dimen/margin02"
            android:layout_marginRight="@dimen/margin16"
            android:onClick="myOnClick"
            android:text="@string/current_version"
            android:textColor="@color/black"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/gray_light" />

        <TableRow
            android:id="@+id/tr_rooted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="myOnClick"
            android:paddingLeft="@dimen/margin10"
            android:paddingTop="@dimen/margin10">

            <ImageView
                android:id="@+id/image_device_rooted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/os_suss" />

            <TextView
                android:id="@+id/tv_device_rooted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_weight="1"
                android:text="@string/device_rooted"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size4"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/menu_rooted"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_action_down" />
        </TableRow>

        <TextView
            android:id="@+id/tv_rooted_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin30"
            android:layout_marginTop="@dimen/margin02"
            android:layout_marginRight="@dimen/margin16"
            android:onClick="myOnClick"
            android:text="@string/current_version"
            android:textColor="@color/black"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin05"
            android:background="@color/gray_light" />



        <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="@dimen/margin16"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size4"
            tools:ignore="RtlSymmetry"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_build"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin05"
            android:layout_marginBottom="@dimen/margin16"
            android:gravity="start"
            android:paddingStart="@dimen/margin16"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size4"
            tools:ignore="RtlSymmetry"
            android:visibility="gone"/>

    </TableLayout>
</RelativeLayout>