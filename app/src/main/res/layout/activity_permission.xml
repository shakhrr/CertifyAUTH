<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/tab_cou"
        layout="@layout/tab_single" />

    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin05"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin10">

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_smartphone_24"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin05"></ImageView>


        <TextView
            android:id="@+id/tv_phone_permission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="@dimen/margin16"
            android:text="@string/phone"
            android:textColor="#e41e1111"
            android:textSize="18dp"
            tools:ignore="RtlSymmetry" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swithc_menu_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_right"
            tools:ignore="ContentDescription"
            android:layout_marginRight="@dimen/margin10"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_camera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin05"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin10">
        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_photo_camera_24"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin05"></ImageView>
        <TextView
            android:id="@+id/tv_camera_permission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="@dimen/margin16"
            android:text="@string/camera"
            android:textColor="#e41e1111"
            android:textSize="18dp"
            tools:ignore="RtlSymmetry" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swithc_menu_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_right"
            tools:ignore="ContentDescription"
            android:layout_marginRight="@dimen/margin10"/>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_storage"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin05"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_storage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_save_24"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin05"></ImageView>

        <TextView
            android:id="@+id/tv_storage_permission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="@dimen/margin16"
            android:text="@string/storage"
            android:textColor="#e41e1111"
            android:textSize="18dp"
            tools:ignore="RtlSymmetry" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swithc_menu_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_right"
            tools:ignore="ContentDescription"
            android:layout_marginRight="@dimen/margin10"/>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin05"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin10">

        <ImageView
            android:id="@+id/image_location"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin05"
            android:src="@drawable/ic_baseline_location_on_24"></ImageView>

        <TextView
            android:id="@+id/tv_location_permission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="@dimen/margin16"
            android:text="@string/location"
            android:textColor="#e41e1111"
            android:textSize="18dp"
            tools:ignore="RtlSymmetry" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swithc_menu_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="150dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_right"
            tools:ignore="ContentDescription"
            android:layout_marginRight="@dimen/margin10"/>


    </LinearLayout>

</LinearLayout>